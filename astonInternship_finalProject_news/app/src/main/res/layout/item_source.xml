<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:elevation="5dp"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="24dp"
    android:paddingBottom="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemSource_imageView_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/cornerSizeFiftyPercent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemSource_textView_sourceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/black_1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemSource_imageView_icon"
        app:layout_constraintTop_toTopOf="@+id/itemSource_imageView_icon"
        tools:text="CNN" />

    <TextView
        android:id="@+id/itemSource_textView_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        android:textColor="@color/gray_4"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/itemSource_textView_sourceName"
        app:layout_constraintStart_toStartOf="@+id/itemSource_textView_sourceName"
        app:layout_constraintTop_toBottomOf="@+id/itemSource_textView_sourceName"
        tools:text="General | USA" />

</androidx.constraintlayout.widget.ConstraintLayout>