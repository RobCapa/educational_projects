<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyUnsplash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/accentColor</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="actionOverflowButtonStyle">@style/toolbarOverflowButton</item>
        <!-- Customize your theme here. -->

        <!-- Colors -->

        <item name="mainBackgroundColor">@color/black</item>
        <item name="mainBackgroundAlphaColor">@color/black_alpha</item>
        <item name="accentColor">@color/blue</item>

        <item name="mainTextColor">@color/white</item>
        <item name="altTextColor">@color/black</item>

        <item name="neutralButton_background_color">@color/white</item>

        <!-- Dimensions -->

        <item name="smallTextSize">10sp</item>
        <item name="mediumTextSize">16sp</item>
        <item name="largeTextSize">23sp</item>
        <item name="hugeTextSize">35sp</item>
        <item name="mainBackgroundColorAlpha">0.5</item>
        <item name="paddingPhotosInFeed">10</item>
    </style>
</resources>